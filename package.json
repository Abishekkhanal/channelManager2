{
  "name": "hotel-booking-engine",
  "version": "1.0.0",
  "description": "Full-fledged Hotel Booking Engine with integrated PMS and Channel Manager",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "cd client && npm run build",
    "install-client": "cd client && npm install",
    "install-server": "npm install",
    "install-all": "npm run install-server && npm run install-client",
    "client": "cd client && npm start",
    "server": "nodemon server.js",
    "concurrent": "concurrently \"npm run server\" \"npm run client\""
  },
  "dependencies": {
    "express": "^4.18.2",
    "mysql2": "^3.6.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "express-validator": "^7.0.1",
    "moment": "^2.29.4",
    "axios": "^1.6.0",
    "xml2js": "^0.6.2",
    "js2xmlparser": "^4.0.2",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.2"
  },
  "keywords": ["hotel", "booking", "pms", "channel-manager", "ota"],
  "author": "Hotel Booking System",
  "license": "MIT"
}