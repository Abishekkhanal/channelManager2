# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=hotel_booking_engine
DB_USER=root
DB_PASSWORD=your_password_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_make_it_long_and_secure_123456789
JWT_EXPIRES_IN=7d

# Email Configuration (for booking confirmations)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL=noreply@grandhotel.com
FROM_NAME=Grand Hotel

# File Upload Configuration
UPLOAD_PATH=uploads/
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Application URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5000

# OTA API Configuration (Examples - Replace with actual credentials)
BOOKING_COM_API_KEY=your_booking_com_api_key
BOOKING_COM_API_USERNAME=your_booking_com_username
BOOKING_COM_API_PASSWORD=your_booking_com_password
BOOKING_COM_ENDPOINT=https://supply-xml.booking.com/

AGODA_API_KEY=your_agoda_api_key
AGODA_API_USERNAME=your_agoda_username
AGODA_API_PASSWORD=your_agoda_password
AGODA_ENDPOINT=https://affiliateservice7.agoda.com/

AIRBNB_API_KEY=your_airbnb_api_key
AIRBNB_API_USERNAME=your_airbnb_username
AIRBNB_API_PASSWORD=your_airbnb_password
AIRBNB_ENDPOINT=https://api.airbnb.com/